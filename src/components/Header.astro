---
import HeaderLink from './HeaderLink.astro'
import { SITE_TITLE } from '../consts'

const LINKS = [
  { name: 'Home', href: '/' },
  { name: 'Blog', href: '/blog' },
  {
    name: 'GitHub',
    href: 'https://github.com/saurabhggc',
    isExternal: true,
  },
  {
    name: 'Twitter',
    href: 'https://twitter.com/saurabh_ggc',
    isExternal: true,
  },
]
---

<header>
  <h2>
    {SITE_TITLE}
  </h2>

  <nav>
    {
      LINKS.map((link) => (
        <HeaderLink
          href={link.href}
          target={link.isExternal ? '_blank' : undefined}
          rel={link.isExternal ? 'noopener noreferer' : undefined}
        >
          {link.name}
        </HeaderLink>
      ))
    }
  </nav>
</header>
